<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="#E1E1E1"
    app:strokeWidth="1dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- Left Icon -->
        <ImageView
            android:id="@+id/typeIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_moneyin_svgrepo_com"
            android:layout_marginEnd="12dp"
            android:contentDescription="Transaction Type Icon" />

        <!-- Right Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- SMS Body -->
            <TextView
                android:id="@+id/smsBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMS Transaction from bank..."
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsmedium" />

            <!-- Amount and Add Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/smsAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â‚¹1,200"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:fontFamily="@font/poppinsmedium" />

                <Button
                    android:id="@+id/addBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Add"
                    android:backgroundTint="@color/orangePrimary"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppinsmedium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
